        font-weight: 700;
        border: 2px solid black;
        transition: 0.6s;
        transform: scale(1.2);
    }

    h3 
    {
        font-weight: 800;
        color: white;
        text-shadow: 3px 3px black;
        font-size: 38px;
        padding-top: 1px;
        padding-bottom: 22px;
    }

    table 
    {
        border-top: 2px solid black;
    }

    td 
    {
        font-size: 18px;
        text-align: center;
        color: #000000;
    }

    th 
    {
        font-size: 18px;
        text-align: center;
        margin-top: 100px;
        border-top: 2px solid black;
        border-bottom: 2px solid black;
        color: #000000;
    }

    #thh 
    {
        border-left: 2px solid black;
        border-top: 2px solid black;
    }

    #thh2 
    {
        border-right: 2px solid black;
        border-top: 2px solid black;
    }

    #printButton 
    {
        background: #912222;
        font-weight: 600;
        margin: 10px;
        border: 2px solid black;
        color: white;
    }

    #printButton:hover
    {
         background: white;
         color: black;
         box-shadow: 2px 2px black;
         font-weight: 700;
         border: 2px solid black;
         transition: 0.6s;
         transform: scale(1.2);
    }

    a 
    {
        color: white;
    }

    a:hover 
    {
        color: black;
    }
    #th4 {
        border-top: 2px solid black;
    }

    #th5 {
        border-top: 2px solid black;
    }

    #th6 {
        border-top: 2px solid black;
    }
    #th7{
         
        border-top: 2px solid black;
    }
