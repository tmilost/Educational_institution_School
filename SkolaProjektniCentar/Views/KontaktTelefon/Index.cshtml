    }
</style>
<p></p>
<p style="text-align:right;">
    @if ((int?)Session["PravoPristupa"] == 3 || (int?)Session["PravoPristupa"] == 2)
    {
        @Html.ActionLink("NOVI TELEFON", "DodajTelefon", "KontaktTelefon", new { @class = "btn btn-danger" })
    }
    <h3 style="text-align:center;">Spisak telefona</h3>
<p> </p>
<table class="table table-condensed">
    <tr>
        <th id="thh">Ime</th>
        <th id="th4">Prezime</th>
        <th id="th5">Tip telefon</th>
        <th id="th6">Broj telefona</th>
        <th id="th7">Lokal</th>
        <th id="thh2"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Osoba.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Osoba.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipTelefona.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojTelefona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokal)
            </td>
            <td>

                @if ((int?)Session["PravoPristupa"] == 3)
                {
                    @Html.ActionLink("Izbrisi", "Izbrisi", new { id = item.IdTelefona }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>
    }
</table>
<button id="printButton"><a href="/KontaktTelefon/Stampaj?"><span class="glyphicon glyphicon-print"></span> Stampaj telefone</a></button>
