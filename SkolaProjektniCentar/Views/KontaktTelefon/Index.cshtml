@model IEnumerable<SkolaProjektniCentar.KontaktTelefon>

@{
    ViewBag.Title = "Index";
}
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link rel="stylesheet" href="../../stylesheets/coloringpage.css" type="text/css" media="screen, projection" />
<link href="~/Content/stil.css" rel="stylesheet" />
<style>

    body {
        background: url('/Slike/img11.png') no-repeat;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
    }

    .btn-danger {
        background: #912222;
        font-weight: 600;
        margin: 10px;
        border: 2px solid black;
        color: white;
    }

    .btn-danger:hover 
    {
        background: white;
