@model SkolaProjektniCentar.ViewModel.KontaktTelefonViewModel

@{
    ViewBag.Title = "Izmeni";
}
<link href="~/Content/stil.css" rel="stylesheet" />
<h2>Izmeni</h2>

@using (Html.BeginForm("Izmeni", "KontaktTelefon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTelefona)

        <div class="form-group">
            @Html.LabelFor(m => m.Osoba.Ime)
            @Html.DropDownListFor(m => m.Osoba.IdOsobe, new SelectList(Model.Osobe, "IdOsobe", "Ime", "ME"), "Izaberi osobu", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IdOsobe)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Tip.Tip)
            @Html.DropDownListFor(m => m.IdTipaTelefona, new SelectList(Model.Tipovi, "IdTipaTelefona", "Tip", "ME"), "Izaberi tip", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Tip.IdTipaTelefona)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KontaktTelefon.BrojTelefona, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KontaktTelefon.BrojTelefona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KontaktTelefon.BrojTelefona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KontaktTelefon.Lokal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KontaktTelefon.Lokal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KontaktTelefon.Lokal, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
