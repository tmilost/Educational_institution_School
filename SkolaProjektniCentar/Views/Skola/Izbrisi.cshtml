    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Izbrisi" class="btn btn-default" /> 
        @Html.ActionLink("Nazad", "Index", new { id = Model.IdSkole }, new { @class = "btn btn-danger" })
