@model SkolaProjektniCentar.ViewModel.MailListeViewModel

@{
    ViewBag.Title = "Izmeni";
}
<link href="~/Content/stil.css" rel="stylesheet" />
<h2>Izmeni</h2>

@using (Html.BeginForm("Izmeni", "MailListe", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>KontaktTelefonViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdMaila)

        <div class="form-group">
            @Html.LabelFor(m => m.Osoba.Ime)
            @Html.DropDownListFor(m => m.MailListe.IdOsobeFK, new SelectList(Model.Osobe, "IdOsobe", "Ime"), "Izaberi osobu", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MailListe.IdOsobeFK)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Tip.Tip)
            @Html.DropDownListFor(m => m.MailListe.IdTipaMailaFK, new SelectList(Model.Tipovi, "IdTipaMaila", "Tip"), "Izaberi tip mail-a", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MailListe.IdTipaMailaFK)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MailListe.Adresa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MailListe.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MailListe.Adresa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
