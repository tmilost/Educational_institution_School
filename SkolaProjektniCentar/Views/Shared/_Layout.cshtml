<!DOCTYPE html>
<link href="~/Content/stil.css" rel="stylesheet" />
<style>
    #nav1 {
        background: #912222;
        color: white;
    }

    .navbar-brand {
        color: white;
    }

    #lista {
        color: white;
    }

    .navbar-inverse .navbar-nav > li > a:hover {
        transition: 0.6s;
        transform: scale(1.4);
    }

    .navbar-inverse .navbar-brand:hover {
        transition: 0.6s;
        transform: scale(1.2);
    }

    .navbar-inverse .navbar-brand {
        color: white;
    }

    .navbar-inverse .navbar-nav > li > a {
        color: white;
    }

    .navbar-inverse {
        background-color: #912222;
    }
 
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if ((int?)Session["PravoPristupa"] != null)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @if ((int?)Session["PravoPristupa"] != null)
                    {
                        @Html.ActionLink("Projektni centar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if ((int?)Session["PravoPristupa"] != null)
                        {
                            <li>@Html.ActionLink("Skole", "Index", "Skola")</li>
                            <li>@Html.ActionLink("Osobe", "Index", "Osoba")</li>
                            <li>@Html.ActionLink("Kontakt telefoni", "Index", "KontaktTelefon")</li>
                            <li>@Html.ActionLink("Mailovi", "Index", "MailListe")</li>
                            <li>@Html.ActionLink("Tipovi telefona", "Index", "TipTelefona")</li>
                            <li>@Html.ActionLink("Tipovi maila", "Index", "TipMaila")</li>
                        }
                        @if ((int?)Session["PravoPristupa"] == 3)
                        {
                            <li>@Html.ActionLink("Korisnici", "Index", "Korisnik")</li>
                        }
                        @if ((int?)Session["PravoPristupa"] != null)
                        {
                            <li class="navbar-right">
                                @Html.ActionLink("Odjavi se", "LogOut", "Login")
                                
                            </li>
                        }

                    </ul>

                </div>

            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
