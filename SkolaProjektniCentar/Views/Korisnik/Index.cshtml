<p></p>
<p style="text-align:right;">@Html.ActionLink("NOVI KORISNIK", "DodajKorisnika", "Korisnik", new { @class = "btn btn-danger" })</p>
<h3 style="text-align:center;">Spisak Korisnika</h3>
<p> </p>
<table class="table table-condensed">
    <tr>
        <th id="th1">Korisnicko ime</th>
        <th id ="th4">Lozinka</th>
        <th id ="th3">Pravo Pristupa</th>
        <th id="th2"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KorisnickoIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lozinka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PravoPristupa)
            </td>
            <td>

                @Html.ActionLink("Izmeni", "Izmeni", new { id = item.IdKorisnika }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Izbrisi", "Izbrisi", new { id = item.IdKorisnika }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
<p>
