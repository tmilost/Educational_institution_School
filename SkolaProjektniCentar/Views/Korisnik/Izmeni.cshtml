@model SkolaProjektniCentar.Korisnik

@{
    ViewBag.Title = "Izmeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/stil.css" rel="stylesheet" />
<style>
    body {
        background: url('/Slike/img11.png') no-repeat;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
    }

    .btn-default {
        background: #912222;
        font-weight: 600;
        margin: 10px;
        border: 2px solid black;
        color: white;
    }

   .btn-default:hover 
   {
         background: white;
         color: black;
         box-shadow: 2px 2px black;
         font-weight: 700;
         border: 2px solid black;
         transition: 0.6s;
         transform: scale(1.2);
   }

    .btn-danger 
    {
        background: #912222;
        font-weight: 600;
        margin: 10px;
        border: 2px solid black;
        color: white;
    }

    .btn-danger:hover
    {
        background: white;
        color: black;
        box-shadow: 2px 2px black;
        font-weight: 700;
        border: 2px solid black;
        transition: 0.6s;
        transform: scale(1.2);
    }

    h2 {
        font-weight: 900;
        color: white;
        text-shadow: 3px 3px black;
        font-size: 40px;
    }

    #imgUpl {
        position: relative;
        left: 10%;
        padding: 10px;
    }
</style>
<h2>Izmeni</h2>

@using (Html.BeginForm("Izmeni", "Korisnik", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.KorisnickoIme, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KorisnickoIme)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lozinka, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lozinka, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Lozinka)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PravoPristupa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PravoPristupa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PravoPristupa)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sacuvaj" class="btn btn-default" />
                @Html.ActionLink("Nazad", "Index", new { id = Model.IdKorisnika }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
